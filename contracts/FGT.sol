    function randomNumber(uint256 outputMin, uint256 outputMax, uint256 addend) private view returns(uint256 rand) {
        uint256 diff = outputMax.sub(outputMin);
        uint256 scope = diff.add(addend);
        uint256 random = uint256(keccak256(abi.encodePacked(block.timestamp, gasleft(), _msgSender()))) % scope;
        rand = outputMin.add(random);
    }

    function swapThisTokenForToken(uint256 thisTokenAmount) private{
        // generate the uniswap pair path of token -> usdt
        address[] memory path = new address[](3);
        path[0] = address(this);
        path[1] = usdtAddress;
        path[2] = pancakeRouter.WETH();
        // make the swap
        pancakeRouter.swapExactTokensForETH(
            thisTokenAmount,
            0, // accept any amount of token
            path,
            address(this),
            block.timestamp + 360
        );

        address[] memory path_ = new address[](2);
        path_[0] = pancakeRouter.WETH();
        path_[1] = usdtAddress;
        // make the swap
        uint256 ethAmount = address(this).balance;
        pancakeRouter.swapExactETHForTokens{value:ethAmount}(
            0, // accept any amount of token
            path_,
            address(this),
            block.timestamp + 360
        );
    }

